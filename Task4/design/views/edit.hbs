{{>navbar}} <br>
<section class="container my-5">
    <h3 class="text-primary">Edit This User</h3>
    <form action="" method="POST">
        
    <div class="mb-3">
        <input type="hidden" name="id" placeholder="enter name" class="form-control" value="{{customerData.id}}">
    </div>

    <div class="mb-3 " >
        <input type="text" name="name" placeholder="enter name" class="form-control" value="{{customerData.name}}">
    </div>
    <div class="mb-3">
        <input type="number" name="accNum" placeholder="enter accNum" class="form-control" value="{{customerData.accNum}}">
    </div>
    <div class="mb-3">
        <input type="number" name="balance" placeholder="enter balance" class="form-control" value="{{customerData.balance}}">
    </div>
    <div class="mb-3">
        <select name="status">
            <option value="true">Active</option>
            <option value="false">DeActive</option>
        </select>
    </div>
    <div class="mb-3">
        <input type="submit"  value="Update" placeholder="enter name" class="btn btn-success">
    </div>
    
</form>
</section>

