{{>header}} <br>
{{>navbar}} <br>

<section class="container my-5">
    <div class="my-3">
        <h3 class="danger text-danger" style="text-align: center;" >{{error}}</h3>
    </div>
    <div >
        <a href="/add" class="btn btn-success">Add</a>
    </div>
    <div class="search_input">
        <input type="text" id="search_input" class="form-control" placeholder="Filter table using names">
    </div>
    <table class="table table-striped table_body">
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>accNum</th>
                <th>balance</th>
                <th>status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody id="myTable">
            {{#if isEmpty}}
            <tr>
                <td colspan="5" class="alert alert-danger">No Data to show</td>
            </tr>
            {{/if}}
            {{#each allCustomers}}
            <tr class="name">
                <td>{{this.id}}</td>
                <td >{{this.name}}</td>
                <td>{{this.accNum}}</td>
                <td>{{this.balance}}</td>
                <td>{{this.status}}</td>
                <td>
                    <a href="/edit/{{this.id}}" class="btn btn-warning mx-3">Edit</a>
                    <a href="/delete/{{this.id}}" class="btn btn-danger mx-3">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>
{{>footer}} <br>